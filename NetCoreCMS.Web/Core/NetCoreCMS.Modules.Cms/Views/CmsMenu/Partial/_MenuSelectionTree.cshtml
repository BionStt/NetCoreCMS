@{
    var currentMenu = ViewBag.CurrentMenu;
}

<div class="col-sm-8">
    <div class="panel panel-default">
        <div class="panel-heading">
            <div class="col-sm-12">
                <div class="col-sm-4" style="padding-right:0px;">
                    <input type="hidden" id="menuId" name="menuId" value="@currentMenu.Id" />
                    <input type="text" id="menuName" class="form-control input-sm" placeholder="Enter Menu Name" value="@currentMenu.Name" />
                </div>
                <div class="col-sm-4">
                    <select id="menuLocation" class="form-control input-sm">
                        <option value="">Menu Location</option>
                        @if (currentMenu.Id > 0 && currentMenu.Position == "Top")
                        {
                            <option value="Top" selected>Top</option>
                        }
                        else
                        {
                            <option value="Top">Top</option>
                        }
                        @if (currentMenu.Position == "Navigation")
                        {
                            <option value="Navigation" selected>Navigation</option>
                        }
                        else
                        {
                            <option value="Navigation">Navigation</option>
                        }
                        @if (currentMenu.Position == "Left")
                        {
                            <option value="Left" selected>Left</option>
                        }
                        else
                        {
                            <option value="Left">Left</option>
                        }
                        @if (currentMenu.Position == "Right")
                        {
                            <option value="Right" selected>Right</option>
                        }
                        else
                        {
                            <option value="Right">Right</option>
                        }
                        @if (currentMenu.Position == "Footer")
                        {
                            <option value="Footer" selected>Footer</option>
                        }
                        else
                        {
                            <option value="Footer">Footer</option>
                        }
                    </select>
                </div>
                <div class="col-sm-4">
                    @if (currentMenu.Id > 0)
                    {
                        <a class="btn btn-sm btn-outline btn-success pull-right" style="margin-left:5px;" href="/CmsMenu">New Menu</a> 
                    }
                    <input type="button" id="saveMenuBtn" value="Save Menu" class="btn btn-sm btn-outline btn-primary pull-right" />                    
                </div>

                <div style="clear:both;"></div>
            </div>
            <div style="clear:both;"></div>
        </div>

        <div class="panel-body">
            <ul id="selectedMenuTree">
                @if (currentMenu.Id > 0)
                {
                    @Html.Raw(ViewBag.CurrentMenuItems)
                }
                else
                {
                    <li class="list-group-item no-boarder" ncc-menu-item-id="0" ncc-menu-item-action-type="Url" ncc-menu-item-controller="CmsHome" ncc-menu-item-action="Index" ncc-menu-item-action-data="" ncc-menu-item-url="/CmsHome" ncc-menu-item-target="" ncc-menu-item-order="1" ncc-menu-item-title="Home">
                        <div class="menu-item-content">
                            <div class="pull-left" style="padding: 5px 5px;">
                                <i class="glyphicon glyphicon-move margin-right-10"></i>
                                <span class="ncc-menu-title">Home</span>
                            </div>
                            <input type="button" class="closeMenuItem pull-right" value="X" onclick="RemoveMenuItem(this)" />
                        </div>
                    </li>
                }
            </ul>
            <span id="result"></span>
        </div>

    </div>
</div>