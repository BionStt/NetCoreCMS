@using NetCoreCMS.Framework.Utility
@using System.Collections
@model List<NccPage>
@{
    Layout = Constants.AdminLayoutName;
}

<script src="~/lib/ckeditor/ckeditor.js"></script>
<link href="/NetCoreCMS.Modules.Cms/css/page.css" rel="stylesheet" />
<script src="/NetCoreCMS.Modules.Cms/js/managePage.js"></script>


<div class="row">
    <div class="col-sm-12">    
        <div style="width:200px;">
            <div class="col-sm-6"><h3>Pages</h3></div>
            <div class="col-sm-6" style="padding-top:15px;"><input class="btn btn-primary" type="button" value="Add New" /></div>
            <div style="clear:both;"></div>
        </div>
        <br/>
        <table id="pageListDt" class="table table-striped table-bordered" cellspacing="0" width="100%">
            <thead>
                <tr><th>Title</th><th>Author</th><th>PublishDate</th><th>Status</th><th>Order</th><th>Action</th></tr>
            </thead>
            <tbody>
                @foreach (var page in Model)
                {
                    <tr>
                        <td>@page.Title</td>
                        <td>@page.CreateBy</td>
                        <td>@page.PublishDate</td>
                        <td>@page.PageStatus</td>
                        <td>@page.PageOrder</td>
                        <td>
                            <a asp-controller="CmsPage" asp-action="Index">Edit</a> |
                            <a asp-controller="CmsPage" asp-action="Index">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<link href="~/lib/DataTables/DataTables-1.10.13/css/dataTables.bootstrap.css" rel="stylesheet" />
<script src="~/lib/DataTables/datatables.js"></script>
<script src="~/lib/DataTables/DataTables-1.10.13/js/dataTables.bootstrap.js"></script>