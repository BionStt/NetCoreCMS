@using NetCoreCMS.Framework.Utility
@using System.Collections
@using System.Text
@using System.Linq

@model NccPage
@{

    if (!string.IsNullOrEmpty(Model.Layout) && GlobalConfig.ActiveTheme.Layouts.Where(x=>x.Name == Model.Layout).FirstOrDefault() != null) {
        Layout = "_" + Model.Layout;
    }

    var pageDetails = Model.PageDetails.Where(x => x.Language == ViewBag.CurrentLanguage).FirstOrDefault();
    if(pageDetails == null)
    {
        pageDetails = Model.PageDetails.FirstOrDefault();
    }

    ViewData["Title"] = pageDetails.Title;
    ViewData["MetaDescription"] = pageDetails.MetaDescription;
    ViewData["MetaKeyword"] = pageDetails.MetaKeyword;
}
 
@section Styles{
    <style>
       @Html.Raw("        ");
    </style>
}
<div class="row">
    @Html.Raw(pageDetails.Content)
</div>
 
@section Scripts{

}
