@using NetCoreCMS.Modules.Admin.Models.ViewModels


@{
    Layout = Constants.AdminLayoutName;
    ViewData["PageTitle"] = "Logging";
    ViewData["PageSubtitle"] = "Set Log Level and Download Log";
}

<div class="row">
    <div class="col-sm-12">
        <form class="form-horizontal" asp-controller="Admin" asp-action="Startup" method="post">
            
            <div class="form-group">
                <label>Log Level: </label>
                <select id="logLevel" name="logLevel">
                    <option value="Debug">Debug</option>
                    <option value="Information">Info</option>
                    <option value="Warning">Warning</option>
                    <option value="Error">Error</option>
                    <option value="Critical">Critical</option>
                </select>                
            </div>
            
            <div class="form-group">
                <label>Download All Logs: </label>
                <a href="/Admin/DownloadLog">Download All Log File</a>
            </div>
            
            <div class="form-group">
                <label>Download Single Day Log: </label>
                <select id="logFiles" name="logFiles">
                    <option>Select a post</option>
                </select>
                <input class="btn btn-primary" type="submit" value="Download" />
            </div>            
        </form>
    </div>    
</div>
     