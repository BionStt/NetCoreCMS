@using NetCoreCMS.Modules.OnlineExam.Models
@model OeQuestion
@{
    Layout = Constants.AdminLayoutName;
    ViewData["PageTitle"] = "Item Delete";
    ViewData["PageSubtitle"] = "Delete item";
    var controllerName = "OeQuestion";
}



    <div class="row">

    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-body">
                <div class="row">
                    <form id="deletetForm" class="form-horizontal" asp-controller="@controllerName" asp-action="Delete" method="post">

                        <div class="col-md-12 pull-left">
                            <h3>Are you sure you want to delete <b>question no @Model.QuestionSerial </b> of <b>unique set @Model.UniqueSetNumber </b> of <b>exam @Model.Exam.Name</b> ?</h3>
                            <div class="col-md-12">
                                <input type="hidden" id="Id" name="Id" value="@Model.Id" />
                                <a class="btn btn-default" asp-action="Manage">No</a>
                                <input class="btn btn-danger" type="submit" name="action" value="Delete" />
                                @if (Model.Exam.IsBangla && Model.Exam.IsEnglish)
                                {
                                    <input class="btn btn-danger" type="submit" name="action" value="Delete All" />
                                }
                            </div>                            
                        </div>
                        
                    </form>

                </div>
                <!-- /.row (nested) -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
</div>
@section Scripts{

}
