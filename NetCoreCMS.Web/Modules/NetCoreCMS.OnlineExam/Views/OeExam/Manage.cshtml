@using NetCoreCMS.Modules.OnlineExam.Models
@using System.Collections

@model List<OeExam>

@{
    Layout = Constants.AdminLayoutName;
    ViewData["PageTitle"] = "Exam Manage";
    ViewData["PageSubtitle"] = "Manage existing exam";
    var controllerName = "OeExam";
}
    
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                @ViewData["PageSubtitle"]
                <div class="pull-right"><a asp-controller="@controllerName" asp-action="CreateEdit" class="btn btn-outline btn-primary btn-xs">Add New</a></div>
            </div>
            <div class="panel-body" style="overflow:auto; max-height:60vh;">
                <table id="pageListDt" class="table table-striped table-bordered" cellspacing="0" width="100%">
                    <thead>
                        <tr style="text-align:center;">
                            <th style="text-align:center;">Name</th>
                            <th style="text-align:center;">Version</th>
                            <th style="text-align:center;">Marks</th>
                            <th style="text-align:center;">Negative Marks</th>
                            <th style="text-align:center;">UniqueSet</th>
                            <th style="text-align:center;">Time (Min)</th>
                            <th style="text-align:center;">SubjectWise</th>
                            <th style="text-align:center;">Combined Shuffle</th>
                            <th style="text-align:center;">Is Published</th>
                            <th style="text-align:center;">Is Retake</th>
                            <th style="text-align:center;">Date Range</th>
                            <th style="text-align:center;">CreateBy</th>
                            <th style="text-align:center;">Status</th>
                            <th style="text-align:center;">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Name</td>
                                <td style="text-align:center;">
                                    @if (item.IsBangla)
                                    {
                                        <span>Bangla, </span>
                                    }
                                    @if (item.IsEnglish)
                                    {
                                        <span>English </span>
                                    }
                                </td>
                                <td style="text-align:center;">
                                    @item.TotalQuestion x @item.MarksPerQuestion = @item.TotalMarks                                
                                </td>
                                <td style="text-align:center;">@item.NegativeMarks</td>
                                <td style="text-align:center;">@item.TotalUniqueSet</td>
                                <td style="text-align:center;">@item.TotalTimeInMin</td>
                                <td style="text-align:center;">@item.IsSubjectWise</td>
                                <td style="text-align:center;">@item.IsCombinedShuffle</td>
                                <td style="text-align:center;">
                                    @if (item.IsPublished == true)
                                    {
                                        <span>Yes</span>
                                    }
                                    else
                                    {
                                        <span>-</span>
                                    }
                                </td>
                                <td style="text-align:center;">
                                    @if (item.IsRetake == true)
                                    {
                                        <span>Yes</span>
                                    }
                                    else
                                    {
                                        <span>-</span>
                                    }
                                </td>
                                <td style="text-align:center;">
                                    @if (item.HasDateRange == true)
                                    {
                                        <span>@item.PublishDateTime.ToString("yyyy-MM-dd HH:mm") <strong>to</strong> @item.ExpireDateTime.ToString("yyyy-MM-dd HH:mm")</span>
                                    }
                                    else
                                    {
                                        <span>-</span>
                                    }
                                </td>
                                <td style="text-align:center;">@item.CreateBy</td>
                                <td style="text-align:center;">@item.Status</td>
                                <td style="text-align:center;">
                                    <a asp-controller="@controllerName" asp-action="CreateEdit" asp-route-id="@item.Id" class="btn btn-xs btn-primary btn-outline">Edit</a>
                                    @if (item.Status == -2)
                                    {
                                        <a asp-controller="@controllerName" asp-action="StatusUpdate" asp-route-id="@item.Id" class="btn btn-xs btn-success btn-outline">Active</a>
                                    }
                                    else
                                    {
                                        <a asp-controller="@controllerName" asp-action="StatusUpdate" asp-route-id="@item.Id" class="btn btn-xs btn-danger btn-outline">Inactive</a>
                                    }
                                    <a asp-controller="@controllerName" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-xs btn-danger">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
</div>



@section Scripts{
    <link href="~/lib/DataTables/dataTables.bootstrap.css" rel="stylesheet" />
    <link href="~/lib/DataTables/jquery.dataTables.min.css" rel="stylesheet" />
    <script src="~/lib/DataTables/jquery.dataTables.min.js"></script>
    <script src="~/lib/DataTables/dataTables.bootstrap.min.js"></script>
}
