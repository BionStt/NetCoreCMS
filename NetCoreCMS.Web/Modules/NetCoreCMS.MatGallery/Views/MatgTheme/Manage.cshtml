@using NetCoreCMS.MatGallery.Models
@using System.Collections

@model List<NccUserTheme>

@{
    Layout = Constants.AdminLayoutName;
    ViewData["PageTitle"] = "Theme Manage";
    ViewData["PageSubtitle"] = "Manage themes";
}
    
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                @ViewData["PageSubtitle"]
                <div class="pull-right"><a asp-controller="MatgTheme" asp-action="Upload" class="btn btn-outline btn-success btn-xs">Upload</a></div>
            </div>
            <div class="panel-body">
                <table id="pageListDt" class="table table-striped table-bordered" cellspacing="0" width="100%">
                    <thead>
                        <tr>
                            <th class="text-center">ThemeId</th>
                            <th class="text-center">Name</th>
                            <th class="text-center">Version</th>
                            <th class="text-center">Ncc Version</th>
                            <th class="text-center">Category</th>
                            <th class="text-center">Creation Date</th>
                            <th class="text-center">Last Update</th>
                            <th class="text-center">Total Update</th>
                            <th class="text-center">Author</th>
                            <th class="text-center">CreatedBy</th>
                            <th class="text-center">Is Private</th>
                            <th class="text-center">Status</th>
                            <th class="text-center">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.ThemeId</td>
                                <td>@item.ThemeName</td>
                                <td>@item.Version</td>
                                <td>@item.NetCoreCMSVersion</td>
                                <td>@item.Category</td>
                                <td>@item.CreationDate</td>
                                <td>@item.ModificationDate</td>
                                <td>@item.VersionNumber</td>
                                <td>@item.Author</td>
                                <td>@item.CreateBy</td>
                                <td>@item.IsPrivate</td>
                                <td>@item.Status</td>
                                <td>
                                    @if (item.IsPrivate == true)
                                    {
                                        <a asp-controller="MatgTheme" asp-action="PrivateStatusUpdate" asp-route-id="@item.Id" class="btn btn-xs btn-success btn-outline">Make Public</a>
                                    }
                                    else
                                    {
                                        <a asp-controller="MatgTheme" asp-action="PrivateStatusUpdate" asp-route-id="@item.Id" class="btn btn-xs btn-primary btn-outline">Make Private</a>
                                    }
                                     
                                    @if (item.Status == -2)
                                    {
                                        <a asp-controller="MatgTheme" asp-action="StatusUpdate" asp-route-id="@item.Id" class="btn btn-xs btn-success btn-outline">Active</a>
                                    }
                                    else
                                    {
                                        <a asp-controller="MatgTheme" asp-action="StatusUpdate" asp-route-id="@item.Id" class="btn btn-xs btn-danger btn-outline">Inactive</a>
                                    }
                                    <a asp-controller="MatgTheme" asp-action="Log" asp-route-id="@item.Id" class="btn btn-xs btn-info ">Log</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
</div>



@section Scripts{
    <link href="~/lib/DataTables/dataTables.bootstrap.css" rel="stylesheet" />
    <link href="~/lib/DataTables/jquery.dataTables.min.css" rel="stylesheet" />
    <script src="~/lib/DataTables/jquery.dataTables.min.js"></script>
    <script src="~/lib/DataTables/dataTables.bootstrap.min.js"></script>
}
