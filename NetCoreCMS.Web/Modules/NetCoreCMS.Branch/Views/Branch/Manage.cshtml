@using NetCoreCMS.Branch.Models
@using System.Collections
@model List<NccBranch>
@{
    Layout = Constants.AdminLayoutName;
    ViewData["PageTitle"] = "Branch Manage";
    ViewData["PageSubtitle"] = "Manage existing branches";
}
    
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                @ViewData["PageSubtitle"]
                <div class="pull-right"><a asp-controller="Branch" asp-action="CreateEdit" class="btn btn-outline btn-primary btn-xs">Add New</a></div> 
            </div>
            <div class="panel-body">
                <table id="pageListDt" class="table table-striped table-bordered" cellspacing="0" width="100%">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Address</th>
                            <th>Phone</th>
                            <th>LatLon</th>
                            <th>IsAdmissionOnly</th>
                            @*<th>CreateBy</th>*@
                            <th>Status</th>
                            <th>Order</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Name</td>
                                <td>@item.Address</td>
                                <td>@item.Phone</td>
                                <td>@item.LatLon</td>
                                <td>@item.IsAdmissionOnly</td>
                                @*<td>@item.CreateBy</td>*@
                                <td>@item.Status</td>
                                <td>@item.Order</td>
                                <td>
                                    <a asp-controller="Branch" asp-action="CreateEdit" asp-route-id="@item.Id">Edit</a> |
                                    <a asp-controller="Branch" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
</div>



@section Scripts{
    <link href="~/lib/DataTables/dataTables.bootstrap.css" rel="stylesheet" />
    <link href="~/lib/DataTables/jquery.dataTables.min.css" rel="stylesheet" />
    <script src="~/lib/DataTables/jquery.dataTables.min.js"></script>
    <script src="~/lib/DataTables/dataTables.bootstrap.min.js"></script>
}
