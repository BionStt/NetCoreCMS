@using NetCoreCMS.Notice.Models
@using System.Collections
@model List<NccNotice>
@{
    Layout = Constants.AdminLayoutName;
    ViewData["PageTitle"] = "Notice Manage";
    ViewData["PageSubtitle"] = "Manage existing notices";
}
    
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                @ViewData["PageSubtitle"]
                <div class="pull-right"><a asp-controller="NoticeHome" asp-action="CreateEdit" class="btn btn-outline btn-primary btn-xs">Add New</a></div> 
            </div>
            <div class="panel-body">
                <table id="pageListDt" class="table table-striped table-bordered" cellspacing="0" width="100%">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Title</th>
                            <th>PublishDate</th>
                            <th>ExpireDate</th>
                            <th>NoticeStatus</th>
                            <th>NoticeType</th>
                            <th>CreateBy</th>
                            <th>Status</th>
                            <th>Order</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Name</td>
                                <td>@item.Title</td>
                                <td>@item.PublishDate.ToString("yyyy-MM-dd hh:mm tt")</td>
                                <td>@item.ExpireDate.ToString("yyyy-MM-dd hh:mm tt")</td>
                                <td>@item.NoticeStatus</td>
                                <td>@item.NoticeType</td>
                                <td>@item.CreateBy</td>
                                <td>@item.Status</td>
                                <td>@item.NoticeOrder</td>
                                <td>
                                    <a asp-controller="NoticeHome" asp-action="CreateEdit" asp-route-id="@item.Id">Edit</a> |
                                    <a asp-controller="NoticeHome" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
</div>



@section Scripts{
    <link href="~/lib/DataTables/dataTables.bootstrap.css" rel="stylesheet" />
    <link href="~/lib/DataTables/jquery.dataTables.min.css" rel="stylesheet" />
    <script src="~/lib/DataTables/jquery.dataTables.min.js"></script>
    <script src="~/lib/DataTables/dataTables.bootstrap.min.js"></script>
}
