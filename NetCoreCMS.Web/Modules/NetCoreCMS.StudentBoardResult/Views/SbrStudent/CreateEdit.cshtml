@model SbrStudentViewModel

@{
    Layout = Constants.AdminLayoutName;
    ViewData["PageTitle"] = "Student Create";
    ViewData["PageSubtitle"] = "Create a new student";
    if (Model.StudentId > 0)
    {
        ViewData["PageTitle"] = "Student Update";
        ViewData["PageSubtitle"] = "Update an existing student";
    }
    var controllerName = "SbrStudent";
}
    
<style>
    .row-bottom{
        margin-bottom:10px;
    }
    .table-center th{
        text-align:center
    }
    .table-center td {
        text-align: center
    }
</style>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                @ViewData["PageSubtitle"]
            </div>
            <div class="panel-body">

                <form id="createEditForm" class="form-horizontal" asp-controller="@controllerName" asp-action="CreateEdit" method="post">
                    <input type="hidden" asp-for="StudentId" value="@Model.StudentId" />
                    <input type="hidden" asp-for="Status" value="@Model.Status" />
                    <div class="col-sm-12 pull-left">
                        @*<div class="form-group">
                                <label class="col-md-3 text-right">Exam </label>
                                <div class="col-md-9">
                                    <select class="form-control" id="examId" name="examId" asp-items="@ViewBag.ExamList">
                                        <option value="0">Select Item</option>
                                    </select>
                                </div>
                            </div>*@
                        <div class="row row-bottom">
                            <label class="col-md-2 text-right">Name </label>
                            <div class="col-md-10">
                                <input type="text" class="form-control" asp-for="Name" placeholder="Enter full name" value="@Model.Name" />
                            </div>
                        </div>
                        <div class="row row-bottom">
                            <label class="col-md-2 text-right">Father's Name </label>
                            <div class="col-md-10">
                                <input type="text" class="form-control" asp-for="FatherName" placeholder="Enter father's name" value="@Model.FatherName" />
                            </div>
                        </div>
                        <div class="row row-bottom">
                            <label class="col-md-2 text-right">Mother's Name </label>
                            <div class="col-md-10">
                                <input type="text" class="form-control" asp-for="MotherName" placeholder="Enter mother's name" value="@Model.MotherName" />
                            </div>
                        </div>
                        <div class="row row-bottom">
                            <label class="col-md-2 text-right">Gender </label>
                            <div class="col-md-4">
                                <select class="form-control" asp-for="GenderId" asp-items="@ViewBag.GenderList">
                                    <option value="">Select Item</option>
                                </select>
                            </div>
                            <label class="col-md-2 text-right">Religion </label>
                            <div class="col-md-4">
                                <select class="form-control" asp-for="ReligionId" asp-items="@ViewBag.ReligionList">
                                    <option value="">Select Item</option>
                                </select>
                            </div>
                        </div>
                        <div class="row row-bottom">
                            <label class="col-md-2 text-right">Mobile </label>
                            <div class="col-md-4">
                                <input type="text" class="form-control" asp-for="MobileNumber" placeholder="Enter mobile number" value="@Model.MobileNumber" />
                            </div>
                            <label class="col-md-2 text-right">Date of Birth </label>
                            <div class="col-md-4">
                                <input type="text" class="form-control" asp-for="DateOfBirth" placeholder="Enter date of birth" value="@Model.DateOfBirth.ToString("yyyy-MM-dd")" />
                            </div>
                        </div>
                        <hr />
                        <table class="table table-striped table-bordered table-center">
                            <thead>
                                <tr>
                                    <th>Exam</th>
                                    <th>Board</th>
                                    <th>Year</th>
                                    <th>Group</th>
                                    <th>Roll No</th>
                                    <th>Registration No</th>
                                    <th>Gpa</th>
                                    <th>Gpa (without 4th)</th>
                                    <th>Letter Grade</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>HSC<input type="hidden" asp-for="HscResultId" value="@Model.HscResultId" /></td>
                                    <td>
                                        <select class="form-control" asp-for="HscBoardId" asp-items="@ViewBag.HscBoardList">
                                            <option value="">Select Board</option>
                                        </select>
                                    </td>
                                    <td>
                                        <select class="form-control" asp-for="HscYear" asp-items="@ViewBag.HscYearList">
                                            <option value="">Select Year</option>
                                        </select>
                                    </td>
                                    <td>
                                        <select class="form-control" asp-for="HscGroupId" asp-items="@ViewBag.HscGroupList">
                                            <option value="">Select Group</option>
                                        </select>
                                    </td>
                                    <td><input type="text" class="form-control" asp-for="HscRollNo" placeholder="Enter ssc roll number" value="@Model.HscRollNo" /></td>
                                    <td><input type="text" class="form-control" asp-for="HscRegistrationNo" placeholder="Enter ssc registration Number" value="@Model.HscRegistrationNo" /></td>
                                    <td><input type="text" class="form-control" asp-for="HscGpa" placeholder="Enter ssc GPA" value="@Model.HscGpa" /></td>
                                    <td><input type="text" class="form-control" asp-for="HscGpaWithout4th" placeholder="Enter GPA without 4th subject" value="@Model.HscGpaWithout4th" /></td>
                                    <td><input type="text" class="form-control" asp-for="HscGrade" placeholder="Enter letter grade" value="@Model.HscGrade" /></td>
                                </tr>
                                <tr>
                                    <td>SSC<input type="hidden" asp-for="SscResultId" value="@Model.SscResultId" /></td>
                                    <td>
                                        <select class="form-control" asp-for="SscBoardId" asp-items="@ViewBag.SscBoardList">
                                            <option value="">Select Board</option>
                                        </select>
                                    </td>
                                    <td>
                                        <select class="form-control" asp-for="SscYear" asp-items="@ViewBag.SscYearList">
                                            <option value="">Select Year</option>
                                        </select>
                                    </td>
                                    <td>
                                        <select class="form-control" asp-for="SscGroupId" asp-items="@ViewBag.SscGroupList">
                                            <option value="">Select Group</option>
                                        </select>
                                    </td>
                                    <td><input type="text" class="form-control" asp-for="SscRollNo" placeholder="Enter ssc roll number" value="@Model.SscRollNo" /></td>
                                    <td><input type="text" class="form-control" asp-for="SscRegistrationNo" placeholder="Enter ssc registration Number" value="@Model.SscRegistrationNo" /></td>
                                    <td><input type="text" class="form-control" asp-for="SscGpa" placeholder="Enter ssc GPA" value="@Model.SscGpa" /></td>
                                    <td><input type="text" class="form-control" asp-for="SscGpaWithout4th" placeholder="Enter GPA without 4th subject" value="@Model.SscGpaWithout4th" /></td>
                                    <td><input type="text" class="form-control" asp-for="SscGrade" placeholder="Enter letter grade" value="@Model.SscGrade" /></td>
                                </tr>
                            </tbody>
                        </table>
                        <hr />
                        <div class="text-center">
                            <a asp-controller="@controllerName" asp-action="Manage" class="btn btn-default">Back</a>
                            <input type="submit" class="btn btn-primary" name="Save" value="Save" />
                            <input type="submit" class="btn btn-success" name="Save" value="Save And New" />
                        </div>

                    </div>


                </form>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
</div>



@section Scripts{

}
