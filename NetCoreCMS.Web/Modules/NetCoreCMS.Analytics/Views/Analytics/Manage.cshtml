@using NetCoreCMS.Modules.Analytics.Models
@using System.Collections

@model List<ViewAnalyticsModel>

@{
    Layout = Constants.AdminLayoutName;
    ViewData["PageTitle"] = "Manage";
    ViewData["PageSubtitle"] = "Manage existing data";
    var controllerName = "Analytics";

    var TotalLogToday = 0;
    var TotalLogLast24 = 0;
    var TotalLog = 0;
}
    
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                @ViewData["PageSubtitle"]
                <div class="pull-right"><a asp-controller="@controllerName" asp-action="CreateEdit" class="btn btn-outline btn-primary btn-xs">Add New</a></div>
            </div>
            <div class="panel-body">
                <table id="pageListDt" class="table table-striped table-bordered" cellspacing="0" width="100%">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Key</th>
                            <th>Today Log</th>
                            <th>Last24 Log</th>
                            <th>Total Log</th>
                            <th>CreateBy</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            TotalLogToday += item.TotalLogToday;
                            TotalLogLast24 += item.TotalLogLast24;
                            TotalLog += item.TotalLog;
                            <tr>
                                <td>@item.Name</td>                                
                                <td>@item.Key</td>
                                <td>@item.TotalLogToday</td>
                                <td>@item.TotalLogLast24</td>
                                <td>@item.TotalLog</td>
                                <td>@item.CreateBy</td>
                                <td>@item.Status</td>
                                <td>
                                    <a asp-controller="@controllerName" asp-action="LogDetails" asp-route-id="@item.Id" class="btn btn-xs btn-primary btn-outline">Log</a>
                                    <a asp-controller="@controllerName" asp-action="CreateEdit" asp-route-id="@item.Id" class="btn btn-xs btn-primary btn-outline">Edit</a>
                                    @if (item.Status == -2)
                                    {
                                        <a asp-controller="@controllerName" asp-action="StatusUpdate" asp-route-id="@item.Id" class="btn btn-xs btn-success btn-outline">Active</a>
                                    }
                                    else
                                    {
                                        <a asp-controller="@controllerName" asp-action="StatusUpdate" asp-route-id="@item.Id" class="btn btn-xs btn-danger btn-outline">Inactive</a>
                                    }
                                    <a asp-controller="@controllerName" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-xs btn-danger">Delete</a>
                                </td>
                            </tr>
                        }

                    </tbody>
                    <tfoot>
                        <tr>
                            <th></th>
                            <th>Total</th>
                            <th>@TotalLogToday</th>
                            <th>@TotalLogLast24</th>
                            <th>@TotalLog</th>
                            <th></th>
                            <th></th>
                            <th></th>
                        </tr>
                    </tfoot>
                </table>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
</div>



@section Scripts{
    <link href="~/lib/DataTables/dataTables.bootstrap.css" rel="stylesheet" />
    <link href="~/lib/DataTables/jquery.dataTables.min.css" rel="stylesheet" />
    <script src="~/lib/DataTables/jquery.dataTables.min.js"></script>
    <script src="~/lib/DataTables/dataTables.bootstrap.min.js"></script>
}
