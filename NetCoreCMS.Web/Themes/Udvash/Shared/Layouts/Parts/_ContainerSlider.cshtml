<!-- Full Width Slider Start -->
<div>
    @{
        var ContainerSlider = GlobalConfig.WebSiteWidgets.Where(x => x.Zone == "ContainerSlider" && x.LayoutName == ViewBag.CurrentLayout).ToList();
        if (ContainerSlider != null && ContainerSlider.Count > 0)
        {
            <div class="">
                @foreach (var item in ContainerSlider)
                {
                    var widgets = GlobalConfig.Widgets.Where(x => x.WidgetId == item.WidgetId).ToList();
                    foreach (var widget in widgets)
                    {
                        widget.Init(item.Id);
                        if (widget.DisplayTitle != "" || widget.Footer != "")
                        {
                            <div class='panel panel-default'>
                                @if (widget.DisplayTitle != "")
                                {
                                    <div class='panel-heading'>
                                        @Html.Raw(widget.DisplayTitle)
                                    </div>
                                }
                                <div class='panel-body'>
                                    @Html.Raw(widget.RenderBody())
                                </div>
                                @if (widget.Footer != "")
                                {
                                    <div class='panel-footer'>
                                        @Html.Raw(widget.Footer)
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <div>
                                @Html.Raw(widget.RenderBody())
                            </div>
                        }
                    }
                }
            </div>
        }
    }
</div>
<!-- Full Width Slider End -->