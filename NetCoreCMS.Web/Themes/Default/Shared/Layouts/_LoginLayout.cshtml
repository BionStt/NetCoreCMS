@{
    BodyWidth = 12;
    CurrentLayout = ThemeResources.Layouts.LoginLayout;
    CurrentLanguage = ThemeHelper.GetCurrentLanguage();
    NccTranslator<ThemeResources> _TT = new NccTranslator<ThemeResources>(CurrentLanguage);
    ThemeResources.RegisterResources(CurrentLayout);
}
 
<!DOCTYPE html>
<html>
    <head>
        @NccRenderHead()
        @Html.Raw(JavaScriptSnippet.FullScript)
        @NccRenderHeaderCss()
        @NccRenderHeaderScripts()

        @RenderSection(ThemeHelper.Sections.StyleHeader, required: false)
        @RenderSection(ThemeHelper.Sections.ScriptHeader, required: false)
        @RenderSection("Styles", required: false)
    </head>
    <body id="body">   
        
        <!-- Container for showing global messages. -->
        <div class="row">
            @NccRenderGlobalMessages()
        </div>
        <!-- Loading -->
        @NccRenderLoadingMaskContainer()
        <!-- Zone TOP Start-->
        <!-- Header -->
        @NccRenderHeader()

        <!-- Navbar -->
        @NccRenderNavigation()        
        <!-- Zone TOP End-->

        <!--  Main Body Start -->
        <div class="container mainBody">   
            <!-- Left Column start -->
            @NccRenderLeftColumn()
            <!-- Left Column end -->

            <!-- Right Column start -->
            @NccRenderRightColumn()
            <!-- Right Column end -->

            <!-- Main content Start -->
            <div class="col-md-@BodyWidth">               
                @NccRenderBody()
            </div>
            <!-- Main content End -->

        </div>
        <!--  Main Body End -->

        <!--  Footer Start -->
        @NccRenderFooter()
        <!--  Footer End -->
        @NccRenderFooterCss()
        @NccRenderFooterScripts()

        @RenderSection(ThemeHelper.Sections.StyleFooter, required: false)
        @RenderSection(ThemeHelper.Sections.ScriptFooter, required: false)
        @RenderSection("Scripts", required: false)
    </body>
</html>

